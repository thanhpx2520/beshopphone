<%- include('../partial/header') %>

<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
  <form role="search">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Search">
    </div>
  </form>
   <ul class="nav menu">
    <li >
      <a href="/admin/dashboard"
        ><svg class="glyph stroked dashboard-dial">
          <use xlink:href="#stroked-dashboard-dial"></use>
        </svg>
         Dashboard</a
      >
    </li>
    <li class="active">
      <a href="/admin/users"
        ><svg class="glyph stroked male user">
          <use xlink:href="#stroked-male-user" /></svg
        > Quản lý thành viên</a
      >
    </li>
    <li >
      <a href="/admin/categories"
        ><svg class="glyph stroked open folder">
          <use xlink:href="#stroked-open-folder" /></svg
        > Quản lý danh mục</a
      >
    </li>
    <li>
      <a href="/admin/products"
        ><svg class="glyph stroked bag">
          <use xlink:href="#stroked-bag"></use></svg
        > Quản lý sản phẩm</a
      >
    </li>
   
  </ul>
</div>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
      <li class="active">Danh sách thành viên</li>
    </ol>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Danh sách thành viên</h1>
    </div>
  </div>

  <div id="toolbar" class="btn-group">
    <a href="/admin/users/add" class="btn btn-success">
      <i class="glyphicon glyphicon-plus"></i> Thêm thành viên
    </a>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table data-toolbar="#toolbar" data-toggle="table" class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Họ & Tên</th>
                <th>Email</th>
                <th>Quyền</th>
                <th>Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user, index) => { %>
                <tr>
                  <td><%= (pages.currentPage - 1) * pages.limit + index + 1 %></td>
                  <td><%= user.full_name || 'Chưa có tên' %></td>
                  <td><%= user.email %></td>
                  <td>
                    <% if (user.role === 'admin') { %>
                      <span class="label label-danger">Admin</span>
                    <% } else { %>
                      <span class="label label-warning">Member</span>
                    <% } %>
                  </td>
                  <td class="form-group">
                    <a href="/admin/users/edit/<%= user._id %>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/admin/users/delete/<%= user._id %>" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn muốn xoá?')"><i class="glyphicon glyphicon-remove"></i></a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="panel-footer">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <% if (pages.hasPrev) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pages.prev %>&limit=<%= pages.limit %>">&laquo;</a>
                </li>
              <% } %>

              <% for (let i = 1; i <= pages.totalPages; i++) { %>
                <li class="page-item <%= i === pages.currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&limit=<%= pages.limit %>"><%= i %></a>
                </li>
              <% } %>

              <% if (pages.hasNext) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pages.next %>&limit=<%= pages.limit %>">&raquo;</a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partial/footer') %>
