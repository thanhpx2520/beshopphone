<div class='col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main'>
  <div class='row'>
    <ol class='breadcrumb'>
      <li><a href='/admin/dashboard'><svg class='glyph stroked home'>
            <use xlink:href='#stroked-home'></use>
          </svg></a></li>
      <li class='active'>Quản lý danh mục</li>
    </ol>
  </div>
  <!--/.row-->

  <div class='row'>
    <div class='col-lg-12'>
      <h1 class='page-header'>Danh sách danh mục</h1>
    </div>
  </div>
  <!--/.row-->

  <div id='toolbar' class='btn-group'>
    <a href='categories/add' class='btn btn-success'>
      <i class='glyphicon glyphicon-plus'></i> Thêm danh mục
    </a>
  </div>

  <div class='row'>
    <div class='col-md-12'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <table data-toolbar='#toolbar' data-toggle='table'>
            <thead>
              <tr>
                <th data-field='id' data-sortable='true'>ID</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% if (newCategories && newCategories.length > 0) { %>
              <% newCategories.forEach(function(category) { %>
              <tr>
                <td><%= category._id %></td>
                <td><%= category.title %></td>
                <td class='form-group'>
                  <a href='categories/edit/<%= category._id %>' class='btn btn-primary'>
                    <i class='glyphicon glyphicon-pencil'></i>
                  </a>
                  <a href='categories/delete/<%= category._id %>' class='btn btn-danger' onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này không?');">
                    <i class='glyphicon glyphicon-remove'></i>
                  </a>
                </td>
              </tr>
              <% }); %>
              <% } else { %>
              <tr>
                <td colspan="3">No categories found.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if (pages?.totalPages >= 1) { %>
        <div class="panel-footer">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <% if (pages?.hasPrev) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= pages?.prev %>">&laquo;</a>
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
              </li>
              <% } %>

              <% for (let i = 1; i <= pages?.totalPages; i++) { %>
              <li class="page-item <%= i === pages?.currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
              <% } %>

              <% if (pages?.hasNext) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= pages?.next %>">&raquo;</a>
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <% } %>

      </div>
    </div>
  </div>
  <!--/.row-->
</div>
<!--/.main-->

